{% comment %}
  Image Table Section
  This section displays a background image on the left and a table on the right
{% endcomment %}

<div class="image-table-section">
  <div class="image-table-container" 
       {% if section.settings.background_image %}
         style="background-image: url('{{ section.settings.background_image | img_url: '1920x1080' }}');"
       {% endif %}
       {% if section.settings.mobile_background_image %}
         data-mobile-bg="{{ section.settings.mobile_background_image | img_url: '800x1200' }}"
       {% endif %}>
    
    <!-- Table Side -->
    <div class="table-side">
      <div class="table-content">
        {% if section.settings.table_title %}
          <h2 class="table-title">{{ section.settings.table_title }}</h2>
        {% endif %}
        
        <div class="comparison-table">
          {% for block in section.blocks %}
            {% case block.type %}
              {% when 'table_row' %}
                <div class="table-row" {{ block.shopify_attributes }}>
                  <div class="table-cell left-cell">
                    {{ block.settings.left_content }}
                  </div>
                  <div class="table-cell right-cell">
                    {{ block.settings.right_content }}
                  </div>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>

    <!-- Placeholder for no background image -->
    {% unless section.settings.background_image %}
      <div class="placeholder-overlay">
        <span>Add Background Image</span>
      </div>
    {% endunless %}
  </div>
</div>

<script>
// Handle mobile background image switching
document.addEventListener('DOMContentLoaded', function() {
  const container = document.querySelector('.image-table-container');
  if (container) {
    const mobileBgUrl = container.getAttribute('data-mobile-bg');
    
    function updateBackgroundImage() {
      if (window.innerWidth <= 768 && mobileBgUrl) {
        container.style.backgroundImage = `url('${mobileBgUrl}')`;
      } else {
        // Reset to desktop image if available
        const desktopImage = container.style.backgroundImage;
        if (!desktopImage && container.style.backgroundImage.includes('data-mobile-bg')) {
          // Get the original desktop background from the inline style
          const originalStyle = container.getAttribute('style');
          if (originalStyle) {
            const bgMatch = originalStyle.match(/background-image:\s*url\(['"]*([^'"]*)['"]*\)/);
            if (bgMatch) {
              container.style.backgroundImage = `url('${bgMatch[1]}')`;
            }
          }
        }
      }
    }
    
    // Initial load
    updateBackgroundImage();
    
    // Handle window resize
    window.addEventListener('resize', updateBackgroundImage);
  }
});
</script>

<style>
  .image-table-section {
    width: 100%;
    height: 80vh;
    min-height: 600px;
    max-height: 800px;
    background-color: {{ section.settings.section_bg_color | default: '#f8f8f8' }};
    padding: 0;
    display: flex;
    align-items: center;
  }

  .image-table-container {
    position: relative;
    width: 100%;
    height: 80vh;
    min-height: 600px;
    max-height: 800px;
    background: #ffffff;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    display: flex;
    align-items: stretch;
  }

  .image-side {
    flex: 1;
    position: relative;
    min-height: 500px;
  }

  .background-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .placeholder-image {
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    font-size: 16px;
  }

  .placeholder-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    font-size: 16px;
    z-index: 1;
  }

  .table-side {
    flex: 0 0 55%;
    padding: 40px;
    background: transparent; /* Remove background from container */
    display: flex;
    align-items: center;
    position: relative;
    z-index: 2;
    margin-left: auto;
    max-width: 600px;
  }

  .table-content {
    width: 100%;
    background: {{ section.settings.table_bg_color | default: 'rgba(255, 255, 255, 0.95)' }}; /* Move background to content */
    padding: 0; /* Remove padding to handle title and table separately */
    border-radius: 8px; /* Optional: add border radius for better look */
    overflow: hidden; /* Ensure border-radius works properly */
  }

  .table-title {
    font-size: {{ section.settings.title_font_size | default: 28 }}px;
    font-weight: 600;
    margin: 0 0 0 0; /* Remove margins */
    padding: 30px 30px 20px 30px; /* Add padding */
    color: {{ section.settings.title_color | default: '#333333' }};
    line-height: 1.3;
    background: {{ section.settings.title_bg_color | default: 'rgba(240, 240, 240, 0.95)' }}; /* Separate background for title */
  }

  .comparison-table {
    width: 100%;
    padding: 10px 30px 30px 30px; /* Add padding for table area */
  }

  .comparison-table {
    width: 100%;
  }

  .table-row {
    display: flex;
    border-bottom: 1px solid {{ section.settings.border_color | default: '#e0e0e0' }};
    padding: 15px 0;
  }

  .table-row:last-child {
    border-bottom: none;
  }

  .table-row:first-child {
    border-top: 1px solid {{ section.settings.border_color | default: '#e0e0e0' }};
  }

  .table-cell {
    flex: 1;
    padding: 0 10px;
    font-size: {{ section.settings.cell_font_size | default: 14 }}px;
    line-height: 1.5;
  }

  .left-cell {
    color: {{ section.settings.left_cell_color | default: '#333333' }};
    font-weight: 500;
  }

  .right-cell {
    color: {{ section.settings.right_cell_color | default: '#666666' }};
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .image-table-section {
      height: 100vh;
      min-height: 600px;
      max-height: none;
    }

    .image-table-container {
      flex-direction: row;
      height: 100vh;
      min-height: 600px;
      max-height: none;
      background-position: center center;
      justify-content: center;
      align-items: center;
    }

    .table-side {
      flex: none;
      width: 90%;
      max-width: 400px;
      padding: 0; /* Remove padding from container on mobile */
      margin: 0 auto;
      background: transparent;
    }

    .table-content {
      padding: 30px 25px; /* Keep padding on content for mobile */
      background: {{ section.settings.table_bg_color | default: 'rgba(255, 255, 255, 0.95)' }};
      border-radius: 8px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .table-title {
      font-size: {{ section.settings.title_font_size | default: 28 | minus: 4 }}px;
      margin-bottom: 20px;
      text-align: center;
    }

    .table-row {
      flex-direction: row;
      padding: 12px 0;
      border-bottom: 1px solid {{ section.settings.border_color | default: '#e0e0e0' }};
    }

    .table-row:first-child {
      border-top: 1px solid {{ section.settings.border_color | default: '#e0e0e0' }};
    }

    .table-cell {
      padding: 0 8px;
      font-size: {{ section.settings.cell_font_size | default: 14 | minus: 1 }}px;
    }

    .left-cell {
      margin-bottom: 0;
      font-weight: 500;
    }
  }

  @media (max-width: 480px) {
    .image-table-section {
      height: 100vh;
      min-height: 500px;
    }

    .image-table-container {
      height: 100vh;
      min-height: 500px;
    }

    .table-side {
      width: 95%;
      max-width: 350px;
      padding: 0;
    }

    .table-content {
      padding: 25px 20px;
    }

    .table-title {
      font-size: {{ section.settings.title_font_size | default: 28 | minus: 6 }}px;
      margin-bottom: 18px;
    }

    .table-row {
      padding: 10px 0;
    }

    .table-cell {
      padding: 0 6px;
      font-size: {{ section.settings.cell_font_size | default: 14 | minus: 2 }}px;
    }
  }
</style>

