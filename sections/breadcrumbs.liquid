{% if section.settings.enable_breadcrumbs %}
  {%- unless template == 'index' or template == 'cart' or template == 'list-collections' or template == '404' -%}
    {%- assign t = template | split: '.' | first -%}
    
    {% style %}
      [data-section-id="{{ section.id }}"] svg path {
        fill: {{ section.settings.foreground_color }};
      }
      [data-section-id="{{ section.id }}"] * {
        color: {{ section.settings.foreground_color }};
      }
      [data-section-id="{{ section.id }}"] {
        background-color: {{ section.settings.background_color }};
        padding-top: {{ section.settings.padding_top_mobile }}px;
        padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
      }
      @media only screen and (min-width: 641px) and (max-width: 1024px) {
        [data-section-id="{{ section.id }}"] {
          padding-top: {{ section.settings.padding_top_tablet }}px;
          padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
        }
      }
      @media screen and (min-width: 1025px) {
        [data-section-id="{{ section.id }}"] {
          padding-top: {{ section.settings.padding_top }}px;
          padding-bottom: {{ section.settings.padding_bottom }}px;
        }
      }
    {% endstyle %}
    
    <section data-section-id="{{ section.id }}" class="site-breadcrumbs">
      <div class="page-width">
        <nav class="breadcrumbs" role="navigation" aria-label="breadcrumbs">
          <ol class="breadcrumbs__list" itemscope itemtype="https://schema.org/BreadcrumbList">
            <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
              <a itemprop="item" class="breadcrumbs__link" href="/"><span itemprop="name">Home</span></a>
              {% render 'icon-caret' %}
                <meta itemprop="position" content="1" />
            </li>
            {%- case t -%}
              {%- when 'page' -%}
                <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                  <a itemprop="item" class="breadcrumbs__link" href="{{ page.url }}" aria-current="page"><span itemprop="name">{{ page.title }}</span></a>
                  {% render 'icon-caret' %}
              <meta itemprop="position" content="2" />
                </li>
              {%- when 'product' -%}
                {%- if collection.url -%}
                  <li class="breadcrumbs__item"  itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <span itemprop="item"><span itemprop="name">{{ collection.title | link_to: collection.url }}</span></span>
                    {% render 'icon-caret' %}
                    <meta itemprop="position" content="2" />
                  </li>
                {% else %}
                <li class="breadcrumbs__item"  itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                  <a  itemprop="item" class="breadcrumbs__link" href="/collections/all"><span itemprop="name">Products</span></a>
                  {% render 'icon-caret' %}
                  <meta itemprop="position" content="2" />
                </li>
                {%- endif -%}
                <li class="breadcrumbs__item"  itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                  <a itemprop="item" class="breadcrumbs__link" href="javascript:void(0)" aria-current="page"><span itemprop="name">{{ product.title | escape }}</span></a>
                  {% render 'icon-caret' %}
                  <meta itemprop="position" content="3" />
                </li>
              {%- when 'collection' and collection.handle -%}
                {%- if current_tags -%}
                  <li class="breadcrumbs__item"  itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <span itemprop="item"><span itemprop="name">{{ collection.title | link_to: collection.url }}</span></span>
                  <meta itemprop="position" content="2" />
                  </li> 
                {%- else -%}
                  <li class="breadcrumbs__item"  itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a itemprop="item" class="breadcrumbs__link" href="{{ collection.url }}" aria-current="page"><span itemprop="name">{{ collection.title }}</span></a>
                    {% render 'icon-caret' %}
                  <meta itemprop="position" content="2" />
                  </li>
                {%- endif -%}
              {%- when 'blog' -%}
                {%- if current_tags -%}
                  <li class="breadcrumbs__item"  itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                  <span itemprop="item"><span itemprop="name"> {{ blog.title | link_to: blog.url }}</span></span>
                  <meta itemprop="position" content="2" />
                  </li>
                {%- else -%}
                  <li class="breadcrumbs__item"  itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a itemprop="item" class="breadcrumbs__link" href="/blogs/team-boka" aria-current="page"><span itemprop="name">Blogs</span></a>
                    {% render 'icon-caret' %}
                  <meta itemprop="position" content="2" />
                  </li>
                  <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a itemprop="item" class="breadcrumbs__link" href="{{ blog.url }}" aria-current="page"><span itemprop="name">{{ blog.title }}</span></a>
                    {% render 'icon-caret' %}
                  <meta itemprop="position" content="3" />
                  </li>
                {%- endif -%}
              {%- when 'article' -%}
                {%- if current_tags -%}
                  <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <span itemprop="name">{{ blog.title | link_to: blog.url }}</span>
                    <meta itemprop="position" content="2" />
                  </li>
                  <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a itemprop="item" class="breadcrumbs__link" href="{{ article.url }}" aria-current="page"><span itemprop="name">{{ article.title }}</span></a>
                    {% render 'icon-caret' %}
                  <meta itemprop="position" content="3" />
                  </li>
                {%- else -%}
                  <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a itemprop="item" class="breadcrumbs__link" href="/pages/all-blogs" aria-current="page"><span itemprop="name">Blogs</span></a>
                    {% render 'icon-caret' %}
                  <meta itemprop="position" content="2" />
                  </li>
                  <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a href="{{ blog.url }}" itemprop="item"><span itemprop="name">{{ blog.title }}</span></a>
                    {% render 'icon-caret' %}
                  <meta itemprop="position" content="3" />
                  </li>
                  <li class="breadcrumbs__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                    <a itemprop="item" class="breadcrumbs__link" href="{{ article.url }}" aria-current="page"><span itemprop="name">{{ article.title }}</span></a>
                    {% render 'icon-caret' %}
                  <meta itemprop="position" content="4" />
                  </li>
                {%- endif -%}
            {%- endcase -%}
          </ol>
        </nav>
      </div>
    </section>
  {%- endunless -%}
{% endif %}
  
{% schema %}
{
  "name": "Breadcrumbs",
  "settings": [
    {
      "type": "checkbox",
      "id": "enable_breadcrumbs",
      "label": "Enable breadcrumbs",
      "default": true
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#fff"
    },
    {
      "type": "color",
      "id": "foreground_color",
      "label": "Foreground color",
      "default": "#000"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "paragraph",
      "content": "Desktop"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "paragraph",
      "content": "Tablet"
    },
    {
      "type": "range",
      "id": "padding_top_tablet",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 30
    },
    {
      "type": "range",
      "id": "padding_bottom_tablet",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    },
    {
      "type": "paragraph",
      "content": "Mobile"
    },
    {
      "type": "range",
      "id": "padding_top_mobile",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom_mobile",
      "min": 0,
      "max": 140,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 0
    }
  ]
}
{% endschema %}
