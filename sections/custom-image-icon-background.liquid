{%- style -%}
  .section-{{ section.id }}-padding {
    background-color: {{ section.settings.section_background_color }};
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media only screen and (min-width: 640px) and (max-width: 1024px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_tablet }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 1025px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Background Image Styles */
  .image-with-text--background-image {
    position: relative;
    min-height: 500px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .image-with-text--background-image::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, {{ section.settings.image_overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }

  .image-with-text--background-image .image-with-text__grid {
    position: relative;
    z-index: 2;
    align-items: center;
    min-height: inherit;
  }

  /* Icon Styles */
  .content-item-with-icon {
    display: flex;
    align-items: flex-start;
    gap: 15px;
    margin-bottom: 20px;
    padding: {{ section.settings.content_item_padding }}px;
    {% if section.settings.content_item_background != blank %}
      background-color: {{ section.settings.content_item_background }};
    {% endif %}
    border-radius: {{ section.settings.content_item_border_radius }}px;
    transition: all 0.3s ease;
    {% if section.settings.content_item_shadow %}
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    {% endif %}
  }

  .content-item-with-icon:hover {
    {% if section.settings.content_item_hover_effect %}
      transform: translateY(-2px);
      box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
    {% endif %}
  }

  .content-item-with-icon:last-child {
    margin-bottom: 0;
  }

  .content-item-icon {
    flex-shrink: 0;
    width: {{ section.settings.icon_size }}px;
    height: {{ section.settings.icon_size }}px;
    border-radius: {% if section.settings.icon_shape == 'circle' %}50%{% elsif section.settings.icon_shape == 'rounded' %}8px{% else %}0{% endif %};
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
    {% if section.settings.icon_background_color != blank %}
      background-color: {{ section.settings.icon_background_color }};
    {% endif %}
    {% if section.settings.icon_border_color != blank %}
      border: 2px solid {{ section.settings.icon_border_color }};
    {% endif %}
  }

  .content-item-icon img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .content-item-icon svg {
    width: {{ section.settings.icon_size | minus: 16 }}px;
    height: {{ section.settings.icon_size | minus: 16 }}px;
    fill: {% if section.settings.icon_color != blank %}{{ section.settings.icon_color }}{% else %}currentColor{% endif %};
  }

  .content-item-text {
    flex: 1;
  }

  .content-item-title {
    font-size: 1.2em;
    font-weight: 600;
    margin-bottom: 5px;
    line-height: 1.3;
  }

  .content-item-description {
    font-size: 0.95em;
    line-height: 1.4;
    opacity: 0.8;
  }

  /* Mobile Layout */
  @media screen and (max-width: 749px) {
    .image-with-text--background-image {
      min-height: 300px;
    }
    
    .image-with-text__grid--mobile-reverse {
      flex-direction: column-reverse;
    }

    .image-with-text__media-item--mobile {
      order: 1;
    }

    .image-with-text__text-item--mobile {
      order: 2;
    }
  }

  /* Desktop Layout */
  @media screen and (min-width: 750px) {
    .image-with-text--background-image {
      min-height: 600px;
    }
  }
{%- endstyle -%}

{% if section.settings.color_scheme == 'custom' %}
  {% assign foreground_color_red = section.settings.custom_text_color | color_extract: 'red' %}
  {% assign foreground_color_green = section.settings.custom_text_color | color_extract: 'green' %}
  {% assign foreground_color_blue = section.settings.custom_text_color | color_extract: 'blue' %}
  {% style %}
    #shopify-section-{{ section.id }} .color-custom {
      --color-foreground: {{ foreground_color_red }}, {{ foreground_color_green }}, {{ foreground_color_blue }};
      --color-background: {{ section.settings.custom_background_color }};
      --gradient-background: {{ section.settings.custom_background_color }};
      color: rgb({{ foreground_color_red }}, {{ foreground_color_green }}, {{ foreground_color_blue }});
    }
  {% endstyle %}
{% endif %} 

<div class="image-with-text image-with-text--{{ section.settings.content_layout }}{% if section.settings.use_background_image %} image-with-text--background-image{% endif %} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == 'background-1' and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} section-{{ section.id }}-padding"
  {% if section.settings.use_background_image and section.settings.image != blank %}
    style="background-image: url('{{ section.settings.image | image_url: width: 1920 }}');"
  {% endif %}>
  
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}{% if section.settings.mobile_content_below_image %} image-with-text__grid--mobile-reverse{% endif %} page-width">
    
    {% unless section.settings.use_background_image %}
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }}{% if section.settings.mobile_content_below_image %} image-with-text__media-item--mobile{% endif %} grid__item">
      <div
        class="image-with-text__media image-with-text__media--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} global-media-settings {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- if section.settings.image_behavior == 'ambient' -%}
            {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
          {%- else -%}
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
          {%- endif -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: sizes, widths: widths
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    {% endunless %}
    
    <div class="image-with-text__text-item{% if section.settings.mobile_content_below_image %} image-with-text__text-item--mobile{% endif %} grid__item">
      <div
        id="ImageWithText--{{ section.id }}"
        class="a11y_links image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container"
      >
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}div{% endif %}
                class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}div{% endif %}>
            
            {%- when 'caption' -%}
              <p
                class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.caption | escape }}
              </p>
            
            {%- when 'text' -%}
              <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            
            {%- when 'content_item' -%}
              <div class="content-item-with-icon" {{ block.shopify_attributes }}>
                {% if block.settings.icon_image != blank or block.settings.icon_svg != blank %}
                  <div class="content-item-icon">
                    {% if block.settings.icon_image != blank %}
                      {{ block.settings.icon_image | image_url: width: 80 | image_tag: loading: 'lazy', alt: block.settings.title }}
                    {% elsif block.settings.icon_svg != blank %}
                      {{ block.settings.icon_svg }}
                    {% endif %}
                  </div>
                {% endif %}
                <div class="content-item-text">
                  {% if block.settings.title != blank %}
                    <div class="content-item-title">{{ block.settings.title }}</div>
                  {% endif %}
                  {% if block.settings.description != blank %}
                    <div class="content-item-description">{{ block.settings.description }}</div>
                  {% endif %}
                </div>
              </div>
            
            {%- when 'button' -%}
              <div class="button-container">
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.button_label | escape }}
                  </a>
                {%- endif -%}

                {% if block.settings.second_button_label != blank %}
                  <a {% if block.settings.second_button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.second_button_link }}"{% endif %}
                      class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}>
                      {{ block.settings.second_button_label }}
                  </a>
                {% endif %} 
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

