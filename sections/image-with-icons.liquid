<!-- Product Features Section -->
<style>
  .product-features-section {
    position: relative;
    {% comment %} min-height: 100vh; {% endcomment %}
    background-color: {{ section.settings.background_color | default: '#f8f9fa' }};
    {% if section.settings.background_image != blank %}
      background-image: url('{{ section.settings.background_image | image_url }}');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
    {% endif %}
    padding: 20px 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-features-container {
    max-width: 1200px;
    width: 100%;
    margin: 0 auto;
    text-align: center;
  }

  .product-features-title {
    font-size: {{ section.settings.title_font_size_desktop | default: 40 }}px;
    font-weight: 400;
    color: {{ section.settings.title_text_color | default: '#000000' }};
    margin-bottom: 60px;
    text-align: center;
  }

  .product-features-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    grid-template-rows: 1fr 1fr;
    gap: 40px;
    align-items: center;
    justify-items: center;
    max-width: 1000px;
    margin: 0 auto;
  }

  .product-image-wrapper {
    grid-column: 2;
    grid-row: 1 / 3;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-image {
    max-width: 300px;
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  .feature-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: {{ section.settings.text_alignment | default: 'center' }};
    max-width: 280px;
  }

  .feature-item.top-left {
    grid-column: 1;
    grid-row: 1;
    align-self: end;
    align-items: flex-start;
    text-align: left;
  }

  .feature-item.top-right {
    grid-column: 3;
    grid-row: 1;
    align-self: end;
    align-items: flex-end;
    text-align: right;
  }

  .feature-item.bottom-left {
    grid-column: 1;
    grid-row: 2;
    align-self: start;
    align-items: flex-start;
    text-align: left;
  }

  .feature-item.bottom-right {
    grid-column: 3;
    grid-row: 2;
    align-self: start;
    align-items: flex-end;
    text-align: right;
  }

  .feature-icon {
    width: {{ section.settings.icon_size | default: 60 }}px;
    height: {{ section.settings.icon_size | default: 60 }}px;
    object-fit: contain;
    margin-bottom: 15px;
  }

  .feature-title {
    font-size: {{ section.settings.feature_title_font_size_desktop | default: 24 }}px;
    font-weight: 400;
    color: {{ section.settings.feature_title_text_color | default: '#333' }};
    margin-bottom: 15px;
    line-height: 1.3;
  }

  .feature-description {
    font-size: {{ section.settings.feature_description_font_size_desktop | default: 16 }}px;
    color: {{ section.settings.feature_description_text_color | default: '#666' }};
    line-height: 1.5;
    margin: 0;
  }

  /* Text alignment variations */
  .feature-item[data-text-align="left"] {
    align-items: flex-start;
    text-align: left;
  }

  .feature-item[data-text-align="right"] {
    align-items: flex-end;
    text-align: right;
  }

  {% comment %} .feature-item[data-text-align="center"] {
    align-items: center;
    text-align: center;
  } {% endcomment %}

  /* Mobile Styles */
  @media (max-width: 768px) {
    .product-features-section {
      min-height: auto;
      padding: 40px 20px;
    }

    .product-features-title {
      font-size: {{ section.settings.title_font_size_mobile | default: 32 }}px;
      margin-bottom: 40px;
    }

    .product-features-content {
      display: flex;
      flex-direction: column;
      gap: 30px;
      align-items: center;
    }

    .product-image-wrapper {
      order: -1;
      margin-bottom: 20px;
    }

    .product-image {
      max-width: 250px;
    }

    .feature-item {
      width: 100%;
      max-width: 350px;
      flex-direction: row;
      align-items: flex-start;
      text-align: left;
      gap: 6px;
    }

    .feature-item.top-left,
    .feature-item.top-right,
    .feature-item.bottom-left,
    .feature-item.bottom-right {
      grid-column: auto;
      grid-row: auto;
      align-self: auto;
      flex-direction: row;
      align-items: flex-start;
      text-align: left;
    }

    .feature-item .feature-content {
      flex: 1;
    }

    .feature-icon {
      width: calc({{ section.settings.icon_size | default: 60 }}px * 0.85);
      height: calc({{ section.settings.icon_size | default: 60 }}px * 0.85);
      margin-bottom: 0;
      margin-right: 15px;
      flex-shrink: 0;
    }

    .feature-title {
      font-size: {{ section.settings.feature_title_font_size_mobile | default: 20 }}px;
      margin-bottom: 12px;
      margin-top: unset;
    }

    .feature-description {
      font-size: {{ section.settings.feature_description_font_size_mobile | default: 14 }}px;
    }
  }

  @media (max-width: 480px) {
    .product-features-section {
      padding: 30px 15px;
    }

    .product-image {
      max-width: 200px;
    }

    .feature-icon {
      width: calc({{ section.settings.icon_size | default: 60 }}px * 0.7);
      height: calc({{ section.settings.icon_size | default: 60 }}px * 0.7);
    }
  }
</style>

<div class="product-features-section">
  <div class="product-features-container">
    {% if section.settings.section_title != blank %}
      <h2 class="product-features-title">{{ section.settings.section_title }}</h2>
    {% endif %}

    <div class="product-features-content">
      <!-- Product Image -->
      <div class="product-image-wrapper">
        {% if section.settings.product_image != blank %}
          <img src="{{ section.settings.product_image | image_url }}" 
               alt="{{ section.settings.product_image.alt | default: 'Product Image' }}" 
               class="product-image">
        {% endif %}
      </div>

      <!-- Feature Items -->
      {% for block in section.blocks %}
        <div class="feature-item {{ block.settings.position }}" 
             data-text-align="{{ section.settings.text_alignment | default: 'center' }}"
             {{ block.shopify_attributes }}>
          {% if block.settings.icon != blank %}
            <img src="{{ block.settings.icon | image_url }}" 
                 alt="{{ block.settings.title }}" 
                 class="feature-icon">
          {% endif %}
          
          <div class="feature-content">
            {% if block.settings.title != blank %}
              <h3 class="feature-title">{{ block.settings.title }}</h3>
            {% endif %}
            
            {% if block.settings.description != blank %}
              <p class="feature-description">{{ block.settings.description }}</p>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>

