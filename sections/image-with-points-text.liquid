{%- style -%}
  .section-{{ section.id }}-padding {
    background-color: {{ section.settings.section_background_color }};
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media only screen and (min-width: 640px) and (max-width: 1024px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_tablet }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 1025px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Background media layout styles */
  .enhanced-image-with-text-bg {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    overflow: hidden;
    width: 100%;
  }
  
  .enhanced-image-with-text-bg__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
  
  .enhanced-image-with-text-bg__video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }
  
  .enhanced-image-with-text-bg__content {
    position: relative;
    z-index: 2;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
  }
  
  .enhanced-image-with-text-bg__text-wrapper {
    max-width: 600px;
    margin-bottom: 30px;
  }
  
  .enhanced-image-with-text-bg__text-wrapper h1,
  .enhanced-image-with-text-bg__text-wrapper h2,
  .enhanced-image-with-text-bg__text-wrapper h3,
  .enhanced-image-with-text-bg__text-wrapper h4,
  .enhanced-image-with-text-bg__text-wrapper h5,
  .enhanced-image-with-text-bg__text-wrapper h6,
  .enhanced-image-with-text-bg__text-wrapper p,
  .enhanced-image-with-text-bg__text-wrapper div {
    color: {{ section.settings.text_color }};
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }
  
  /* Additional text styles above button */
  .enhanced-image-with-text-bg__additional-texts-container {
    display: flex;
    gap: 40px;
    margin-bottom: 30px;
    max-width: 600px;
    flex-wrap: wrap;
  }
  
  .enhanced-image-with-text-bg__additional-text {
    flex: 1;
    min-width: 250px;
    background-color: #ffffffa6;
  }
  
  .enhanced-image-with-text-bg__additional-text p,
  .enhanced-image-with-text-bg__additional-text div {
    color: {{ section.settings.text_color }};
    padding: 3px;
  }
  
  /* Remove container styles for both desktop and mobile */
  .enhanced-image-with-text-bg__container {
    background-color: transparent;
    padding: 0;
    border-radius: 0;
    box-shadow: none;
    backdrop-filter: none;
    max-width: 600px;
  }
  
  /* Mobile layout */
  @media screen and (max-width: 749px) {
    .enhanced-image-with-text-bg {
      flex-direction: column;
      min-height: auto;
    }
    
    .enhanced-image-with-text-bg__media,
    .enhanced-image-with-text-bg__video {
      position: relative;
      height: 300px;
      margin-bottom: 20px;
    }
    
    .enhanced-image-with-text-bg__content {
      position: static;
      padding: 0 20px 20px;
    }
    
    .enhanced-image-with-text-bg__text-wrapper h1,
    .enhanced-image-with-text-bg__text-wrapper h2,
    .enhanced-image-with-text-bg__text-wrapper h3,
    .enhanced-image-with-text-bg__text-wrapper h4,
    .enhanced-image-with-text-bg__text-wrapper h5,
    .enhanced-image-with-text-bg__text-wrapper h6,
    .enhanced-image-with-text-bg__text-wrapper p,
    .enhanced-image-with-text-bg__text-wrapper div {
      color: {{ section.settings.mobile_text_color }};
      text-shadow: none;
    }
    
    .enhanced-image-with-text-bg__additional-texts-container {
      flex-direction: column;
      gap: 15px;
    }
    
    .enhanced-image-with-text-bg__additional-text {
      min-width: auto;
    }
    
    .enhanced-image-with-text-bg__additional-text p,
    .enhanced-image-with-text-bg__additional-text div {
      color: {{ section.settings.mobile_text_color }};
      text-shadow: none;
    }
    
    /* Container remains transparent for mobile too */
    .enhanced-image-with-text-bg__container {
      background-color: transparent;
      padding: 0;
      border-radius: 0;
      box-shadow: none;
      backdrop-filter: none;
    }
  }

  /* Content positioning */
  .enhanced-image-with-text-bg__content--left {
    text-align: left;
  }
  
  .enhanced-image-with-text-bg__content--center {
    text-align: center;
  }
  
  .enhanced-image-with-text-bg__content--right {
    text-align: right;
  }
  
  .enhanced-image-with-text-bg__content--center .enhanced-image-with-text-bg__text-wrapper,
  .enhanced-image-with-text-bg__content--center .enhanced-image-with-text-bg__container,
  .enhanced-image-with-text-bg__content--center .enhanced-image-with-text-bg__additional-text {
    margin-left: auto;
    margin-right: auto;
  }
  
  .enhanced-image-with-text-bg__content--right .enhanced-image-with-text-bg__text-wrapper,
  .enhanced-image-with-text-bg__content--right .enhanced-image-with-text-bg__container,
  .enhanced-image-with-text-bg__content--right .enhanced-image-with-text-bg__additional-text {
    margin-left: auto;
    margin-right: 0;
  }

  /* Video overlay for better readability */
  .enhanced-image-with-text-bg--video::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, {{ section.settings.video_overlay_opacity | divided_by: 100.0 }});
    z-index: 1;
  }
  
  /* Mobile media visibility */
  .hide-mobile {
    display: block;
  }
  
  .show-mobile {
    display: none;
  }
  
  @media screen and (max-width: 749px) {
    .hide-mobile {
      display: none;
    }
    
    .show-mobile {
      display: block;
    }
  }
{%- endstyle -%}

{%- assign has_video = false -%}
{%- if section.settings.background_video != blank -%}
  {%- assign has_video = true -%}
{%- endif -%}

<div class="enhanced-image-with-text-bg{% if has_video %} enhanced-image-with-text-bg--video{% endif %} section-{{ section.id }}-padding">
  {%- if section.settings.media_type == 'video' and section.settings.background_video != blank -%}
    <video
      class="enhanced-image-with-text-bg__video hide-mobile"
      autoplay
      muted
      loop
      playsinline
      {% if section.settings.video_poster != blank %}
        poster="{{ section.settings.video_poster | image_url: width: 1920 }}"
      {% endif %}
    >
      <source src="{{ section.settings.background_video }}" type="video/mp4">
      {%- if section.settings.image != blank -%}
        <img
          src="{{ section.settings.image | image_url: width: 1920 }}"
          alt="{{ section.settings.image.alt | escape }}"
          loading="lazy"
          class="enhanced-image-with-text-bg__media"
          width="1920"
          height="1080"
        />
      {%- endif -%}
    </video>
  {%- elsif section.settings.image != blank -%}
    <img
      src="{{ section.settings.image | image_url: width: 1920 }}"
      alt="{{ section.settings.image.alt | escape }}"
      loading="lazy"
      class="enhanced-image-with-text-bg__media hide-mobile"
      width="1920"
      height="1080"
    />
  {%- else -%}
    <div class="enhanced-image-with-text-bg__media hide-mobile" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
  {%- endif -%}

  <!-- Mobile Media -->
  {%- if section.settings.mobile_media_type == 'video' and section.settings.mobile_background_video != blank -%}
    <video
      class="enhanced-image-with-text-bg__video show-mobile"
      autoplay
      muted
      loop
      playsinline
      {% if section.settings.mobile_video_poster != blank %}
        poster="{{ section.settings.mobile_video_poster | image_url: width: 750 }}"
      {% endif %}
    >
      <source src="{{ section.settings.mobile_background_video }}" type="video/mp4">
      {%- if section.settings.mobile_image != blank -%}
        <img
          src="{{ section.settings.mobile_image | image_url: width: 750 }}"
          alt="{{ section.settings.mobile_image.alt | escape }}"
          loading="lazy"
          class="enhanced-image-with-text-bg__media"
          width="750"
          height="500"
        />
      {%- endif -%}
    </video>
  {%- elsif section.settings.mobile_image != blank -%}
    <img
      src="{{ section.settings.mobile_image | image_url: width: 750 }}"
      alt="{{ section.settings.mobile_image.alt | escape }}"
      loading="lazy"
      class="enhanced-image-with-text-bg__media show-mobile"
      width="750"
      height="500"
    />
  {%- else -%}
    <!-- Fallback to desktop media on mobile if no mobile media is set -->
    {%- if section.settings.media_type == 'video' and section.settings.background_video != blank -%}
      <video
        class="enhanced-image-with-text-bg__video show-mobile"
        autoplay
        muted
        loop
        playsinline
        {% if section.settings.video_poster != blank %}
          poster="{{ section.settings.video_poster | image_url: width: 750 }}"
        {% endif %}
      >
        <source src="{{ section.settings.background_video }}" type="video/mp4">
        {%- if section.settings.image != blank -%}
          <img
            src="{{ section.settings.image | image_url: width: 750 }}"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            class="enhanced-image-with-text-bg__media"
            width="750"
            height="500"
          />
        {%- endif -%}
      </video>
    {%- elsif section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 750 }}"
        alt="{{ section.settings.image.alt | escape }}"
        loading="lazy"
        class="enhanced-image-with-text-bg__media show-mobile"
        width="750"
        height="500"
      />
    {%- else -%}
      <div class="enhanced-image-with-text-bg__media show-mobile" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);"></div>
    {%- endif -%}
  {%- endif -%}
  
  <div class="enhanced-image-with-text-bg__content enhanced-image-with-text-bg__content--{{ section.settings.desktop_content_alignment }}">
    <!-- Main Text Content -->
    <div class="enhanced-image-with-text-bg__text-wrapper">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}div{% endif %}
              class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.heading }}
            </{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}div{% endif %}>
          
          {%- when 'caption' -%}
            <p
              class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
              {{ block.shopify_attributes }}
            >
              {{ block.settings.caption | escape }}
            </p>
          
          {%- when 'text' -%}
            <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
              {{ block.settings.text }}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    <!-- Additional Text Fields Above Button - Side by Side -->
    <div class="enhanced-image-with-text-bg__additional-texts-container">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'additional_text_1' -%}
            <div class="enhanced-image-with-text-bg__additional-text" {{ block.shopify_attributes }}>
              <div class="image-with-text__text rte {{ block.settings.text_style }}">
                {{ block.settings.text }}
              </div>
            </div>
          
          {%- when 'additional_text_2' -%}
            <div class="enhanced-image-with-text-bg__additional-text" {{ block.shopify_attributes }}>
              <div class="image-with-text__text rte {{ block.settings.text_style }}">
                {{ block.settings.text }}
              </div>
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
    
    <!-- Container for buttons only (no styling applied) -->
    <div class="enhanced-image-with-text-bg__container">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'button' -%}
            <div class="button-container">
              {%- if block.settings.button_label != blank -%}
                <a
                  {% if block.settings.button_link == blank %}
                    role="link" aria-disabled="true"
                  {% else %}
                    href="{{ block.settings.button_link }}"
                  {% endif %}
                  class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                  {{ block.shopify_attributes }}
                >
                  {{ block.settings.button_label | escape }}
                </a>
              {%- endif -%}

              {% if block.settings.second_button_label != blank %}
                <a {% if block.settings.second_button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.second_button_link }}"{% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                    {{ block.shopify_attributes }}>
                    {{ block.settings.second_button_label }}
                </a>
              {% endif %}
            </div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

