<style>
@media (min-width: 768px) {
  .mobile-buttons-section {
    display: none;
  }
}

.mobile-buttons-wrapper {
  display: flex;
  overflow-x: auto;
  gap: 10px;
  padding: 10px;
  white-space: nowrap;
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.mobile-buttons-wrapper::-webkit-scrollbar {
  display: none;
}

.mobile-buttons-wrapper a {
  display: inline-block;
  padding: 7px 12px;
  background: white;
  border: 1px black solid;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  font-size: 13px;
}
</style>

<div class="mobile-buttons-section">
  <div class="mobile-buttons-wrapper">
    {% for block in section.blocks %}
      {% if block.settings.button_text != blank and block.settings.button_link != blank %}
        <a href="{{ block.settings.button_link }}">{{ block.settings.button_text }}</a>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Mobile Buttons Section",
  "settings": [
    {
      "type": "header",
      "content": "Add up to 12 buttons"
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Mobile Buttons Section",
      "blocks": [
        {"type": "button"},
        {"type": "button"},
        {"type": "button"}
      ]
    }
  ]
}
{% endschema %}
