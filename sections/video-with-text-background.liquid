{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media only screen and (min-width: 640px) and (max-width: 1024px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_tablet }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 1025px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* Background image styles for text content */
  .image-with-text__content--bg-{{ section.id }} {
    {% if section.settings.text_background_image != blank %}
      background-image: url('{{ section.settings.text_background_image | image_url: width: 1920 }}');
      background-size: {{ section.settings.bg_image_size }};
      background-position: {{ section.settings.bg_image_position }};
      background-repeat: {{ section.settings.bg_image_repeat }};
    {% endif %}
    {% if section.settings.bg_overlay_enabled %}
      position: relative;
    {% endif %}
  }

  {% if section.settings.bg_overlay_enabled %}
  .image-with-text__content--bg-{{ section.id }}::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: {{ section.settings.bg_overlay_color }};
    opacity: {{ section.settings.bg_overlay_opacity | divided_by: 100.0 }};
    z-index: 1;
  }

  .image-with-text__content--bg-{{ section.id }} > * {
    position: relative;
    z-index: 2;
  }
  {% endif %}
{%- endstyle -%}

{% if section.settings.color_scheme == 'custom' %}
  {% assign foreground_color_red = section.settings.custom_text_color | color_extract: 'red' %}
  {% assign foreground_color_green = section.settings.custom_text_color | color_extract: 'green' %}
  {% assign foreground_color_blue = section.settings.custom_text_color | color_extract: 'blue' %}
  <style>
  .section-{{ section.id }}-padding {
    background-color: {{ section.settings.section_background_color }};
  }
    #shopify-section-{{ section.id }} .color-custom {
      --color-foreground: {{ foreground_color_red }}, {{ foreground_color_green }}, {{ foreground_color_blue }};
      --color-background: {{ section.settings.custom_background_color }};
      --gradient-background: {{ section.settings.custom_background_color }};
      color: rgb({{ foreground_color_red }}, {{ foreground_color_green }}, {{ foreground_color_blue }});
    }
  </style>
{% endif %} 

{%- liquid
    assign video_id = section.settings.video.id | default: section.settings.video_url.id
    assign video_alt = section.settings.video.alt | default: section.settings.description
    assign alt = 'sections.video.load_video' | t: description: video_alt | escape
    assign poster = section.settings.video.preview_image | default: section.settings.image
  
    if section.settings.video != null
      assign ratio_diff = section.settings.video.aspect_ratio | minus: poster.aspect_ratio | abs
      if ratio_diff < 0.01 and ratio_diff > 0
        assign fix_ratio = true
      endif
    endif

    if section.settings.enable_video_autoplay
      assign muted = true
    else 
     assign muted = false
    endif
-%}

{%- capture video_sizes -%}
  {% if section.settings.full_width -%}
    100vw
  {%- else -%}
    (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 }}px, (min-width: 750px)
    calc(100vw - 10rem), 100vw
  {%- endif %}
{%- endcapture -%}

<div class="image-with-text image-with-text--{{ section.settings.content_layout }} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == 'background-1' and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} section-{{ section.id }}-padding{% if section.settings.color_scheme == 'custom' %} color-custom{% endif %}">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% elsif section.settings.desktop_image_width == 'small' %}3-col-tablet{% else %}4-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %} page-width{% if section.settings.desktop_narrow_width_enabled %} desktop-narrow-section-width{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item{% unless section.settings.full_width_video %} padded-video{% endunless %}">
      <div
        class="image-with-text__media gradient image-with-text__media--adapt color-{{ section.settings.color_scheme }} global-media-settings {% if section.settings.image != blank or section.settings.video != null or section.settings.video != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        style="padding-bottom: {{ 1 | divided_by: poster.aspect_ratio | times: 100 }}%;"
      >
        <noscript>
            <div
              class="video-section__media"
              {% if poster != null %}
                style="--ratio-percent: {{ 1 | divided_by: poster.aspect_ratio | times: 100 }}%;"
              {% endif %}
            >
              {%- if section.settings.video == null and section.settings.video_url != null -%}
                <a
                  href="{{ section.settings.video_url }}"
                  class="video-section__poster media media--transparent{% if poster == null %} video-section__placeholder{% endif %}"
                >
                  {%- if poster != null -%}
                    {{ poster
                      | image_url: width: 3840
                      | image_tag: loading: 'lazy', sizes: video_sizes, widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt
                    }}
                  {%- else -%}
                    {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
                  {%- endif -%}
                </a>
              {%- else -%}
                {{ section.settings.video
                  | video_tag:
                    image_size: "1100x",
                    loop: section.settings.enable_video_looping,
                    controls: section.settings.show_controls,
                    muted: muted
                }}
              {%- endif -%}
            </div>
          </noscript>
          <deferred-media
            class="video-section__media deferred-media no-js-hidden gradient global-media-settings{% if section.settings.full_width %} global-media-settings--full-width{% endif %}{% if fix_ratio %} media-fit-cover{% endif %}"
            data-media-id="{{ video_id }}"
            {% if poster != null %}
              style="--ratio-percent: {{ 1 | divided_by: poster.aspect_ratio | times: 100 }}%;"
            {% endif %}
          >
            <button
              id="Deferred-Poster-Modal-{{ video_id }}"
              class="video-section__poster media deferred-media__poster media--landscape"
              type="button"
              aria-label="{{ alt }}"
            >
              {%- if poster != null -%}
                {{ poster
                  | image_url: width: 3840
                  | image_tag: loading: 'lazy', sizes: video_sizes, widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840', alt: alt
                }}
              {%- else -%}
                {{ 'collection-2' | placeholder_svg_tag: 'placeholder-svg placeholder' }}
              {%- endif -%}
              <span class="deferred-media__poster-button motion-reduce">
                {%- render 'icon-play' -%}
              </span>
            </button>
            <template>
              {%- if section.settings.video == null and section.settings.video_url != null -%}
                {%- liquid
                  assign loop = ''
                  if section.settings.enable_video_looping
                    assign loop = '&loop=1&playlist=' | append: video_id
                  endif
                  assign mute = ''
                  if section.settings.enable_video_autoplay
                    assign mute = '&mute=1'
                  endif
                  assign controls = ''
                  if section.settings.show_controls
                    assign controls = '&controls=0'
                  endif
                -%}
                {%- if section.settings.video_url.type == 'youtube' -%}
                  <iframe
                    src="https://www.youtube.com/embed/{{ video_id }}?enablejsapi=1&autoplay=1{{ loop }}{{ mute }}{{ controls }}"
                    class="js-youtube"
                    allow="autoplay; encrypted-media"
                    allowfullscreen
                    title="{{ section.settings.description | escape }}"
                  ></iframe>
                {%- else -%}
                  <iframe
                    src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1{{ loop }}{{ mute }}{{ controls }}"
                    class="js-vimeo"
                    allow="autoplay; encrypted-media"
                    allowfullscreen
                    title="{{ section.settings.description | escape }}"
                  ></iframe>
                {%- endif -%}
              {%- else -%}
                {{ section.settings.video
                  | video_tag:
                    image_size: "1100x",
                    autoplay: true,
                    loop: section.settings.enable_video_looping,
                    controls: section.settings.show_controls,
                    muted: muted
                }}
              {%- endif -%}
            </template>
          </deferred-media>
      </div>
    </div>
    <div class="image-with-text__text-item grid__item">
      <div
        id="ImageWithText--{{ section.id }}"
        class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container image-with-text__content--bg-{{ section.id }}"
      >
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}div{% endif %}
                class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}div{% endif %}>
            {%- when 'caption' -%}
              <p
                class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.caption | escape }}
              </p>
            {%- when 'text' -%}
              <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              <div class="button-container">
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.button_label | escape }}
                  </a>
                {%- endif -%}

                {% if block.settings.second_button_label != blank %}
                  <a {% if block.settings.second_button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.second_button_link }}"{% endif %}
                      class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}>
                      {{ block.settings.second_button_label }}
                  </a>
                {% endif %} 
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

{% if section.settings.enable_video_autoplay %}
  <script>
    window.addEventListener('load', function () {
      document.querySelector('#shopify-section-{{ section.id }} .video-section__poster').click();
    })
  </script>
{% endif %}

