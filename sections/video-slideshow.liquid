<style>
  @media screen and (min-width: 750px){
   .slideshow__text-wrapper {
    pointer-events: none;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  
  .slideshow__text-wrapper a,
  .slideshow__text-wrapper button {
    pointer-events: auto;
  }
}

