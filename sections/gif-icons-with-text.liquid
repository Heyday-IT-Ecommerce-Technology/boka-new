{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    background-color: {{ section.settings.section_background_color }};
    padding-top: {{ section.settings.padding_top_mobile }}px;
    padding-bottom: {{ section.settings.padding_bottom_mobile }}px;
  }

  @media only screen and (min-width: 640px) and (max-width: 1024px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top_tablet }}px;
      padding-bottom: {{ section.settings.padding_bottom_tablet }}px;
    }
  }

  @media screen and (min-width: 1025px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
  @media only screen and (max-width: 748px) {
    .icons-with-text {
      display: inline;
    }
  }
  /* Background image styles for text content area */
  .enhanced-image-with-text__text-item--bg {
    position: relative;
    overflow: hidden;
  }
  
  .enhanced-image-with-text__text-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
    opacity: {{ section.settings.text_bg_opacity | default: 100 | divided_by: 100.0 }};
  }
  
  .enhanced-image-with-text__content {
    position: relative;
    z-index: 2;
    background: rgba(255, 255, 255, {{ section.settings.content_bg_opacity | default: 90 | divided_by: 100.0 }});
    padding: 20px;
    border-radius: 8px;
  }

  /* Override for custom color schemes */
  .enhanced-image-with-text__text-item--bg .color-custom .enhanced-image-with-text__content {
    background: rgba({{ section.settings.custom_background_color | color_extract: 'red' }}, {{ section.settings.custom_background_color | color_extract: 'green' }}, {{ section.settings.custom_background_color | color_extract: 'blue' }}, 0.9);
  }

  /* Ensure minimum height for background visibility */
  .enhanced-image-with-text__text-item--bg {
    min-height: 400px;
  }

  /* Icon text styles */
  .icon-text-item {
    margin-bottom: 20px;
  }
  
  .icon-text-item:last-child {
    margin-bottom: 0;
  }
  
  .icon-text-item__icon {
    width: {{ section.settings.icon_size | default: 24 }}px;
    height: {{ section.settings.icon_size | default: 24 }}px;
    margin: 0 auto 12px auto;
    display: block;
  }
  
  .icon-text-item__content {
    text-align: center;
  }

  .icon-text-item__heading {
    margin: 0 0 8px 0;
  }
  
  .icon-text-item__text {
    margin: 0;
  }

  /* Desktop layout - side by side */
  @media screen and (min-width: 750px) {
    .icon-text-item {
      display: flex;
      align-items: flex-start;
      gap: 15px;
    }
    
    .icon-text-item__icon {
      flex-shrink: 0;
      margin: 2px 0 0 0;
      display: block;
    }
    
    .icon-text-item__content {
      flex: 1;
      text-align: left;
    }
  }

  /* GIF specific styles */
  .enhanced-image-with-text__media img,
  .enhanced-image-with-text__media video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Dynamic font sizes for icon text blocks */
  {% for block in section.blocks %}
    {% if block.type == 'icon_text' %}
      .icon-text-block-{{ block.id }} .icon-text-item__heading {
        font-size: {{ block.settings.heading_font_size | default: 18 }}px;
        font-weight: {{ block.settings.heading_font_weight | default: 400 }};
      }
      
      .icon-text-block-{{ block.id }} .icon-text-item__text {
        font-size: {{ block.settings.text_font_size | default: 16 }}px;
      }
    {% endif %}
  {% endfor %}
{%- endstyle -%}

{% if section.settings.color_scheme == 'custom' %}
  {% assign foreground_color_red = section.settings.custom_text_color | color_extract: 'red' %}
  {% assign foreground_color_green = section.settings.custom_text_color | color_extract: 'green' %}
  {% assign foreground_color_blue = section.settings.custom_text_color | color_extract: 'blue' %}
  {% style %}
    #shopify-section-{{ section.id }} .color-custom {
      --color-foreground: {{ foreground_color_red }}, {{ foreground_color_green }}, {{ foreground_color_blue }};
      --color-background: {{ section.settings.custom_background_color }};
      --gradient-background: {{ section.settings.custom_background_color }};
      color: rgb({{ foreground_color_red }}, {{ foreground_color_green }}, {{ foreground_color_blue }});
    }
  {% endstyle %}
{% endif %} 

<div class="image-with-text enhanced-image-with-text image-with-text--{{ section.settings.content_layout }} isolate{% if settings.text_boxes_border_thickness > 0 and settings.text_boxes_border_opacity > 0 and settings.media_border_thickness > 0 and settings.media_border_opacity > 0 %} collapse-borders{% endif %}{% unless section.settings.color_scheme == 'background-1' and settings.media_border_thickness > 0 and settings.text_boxes_shadow_opacity == 0 and settings.text_boxes_border_thickness == 0 or settings.text_boxes_border_opacity == 0 %} collapse-corners{% endunless %} section-{{ section.id }}-padding">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %} page-width">
    
    <!-- Media Item (Image/GIF) -->
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
      <div
        class="image-with-text__media enhanced-image-with-text__media image-with-text__media--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} global-media-settings {% if section.settings.image != blank or section.settings.gif_file != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}{% if section.settings.image_behavior != 'none' %} animate--{{ section.settings.image_behavior }}{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- comment -%} Display image or GIF {%- endcomment -%}
          {%- if section.settings.image_behavior == 'ambient' -%}
            {%- assign widths = '198, 432, 642, 900, 1284, 1800' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 1.6667 }}px,
              (min-width: 750px) calc((100vw - 130px) / 1.667), calc((100vw - 50px) / 1.667)
            {%- endcapture -%}
          {%- else -%}
            {%- assign widths = '165, 360, 535, 750, 1070, 1500' -%}
            {%- capture sizes -%}
              (min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px,
              (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)
            {%- endcapture -%}
          {%- endif -%}
          {{
            section.settings.image
            | image_url: width: 1500
            | image_tag: loading: 'lazy', sizes: sizes, widths: widths
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    
    <!-- Text Content Item with Background -->
    <div class="image-with-text__text-item enhanced-image-with-text__text-item grid__item{% if section.settings.text_background_image != blank %} enhanced-image-with-text__text-item--bg{% endif %}">
      {%- if section.settings.text_background_image != blank -%}
        <img
          src="{{ section.settings.text_background_image | image_url: width: 800 }}"
          alt="Background"
          loading="lazy"
          class="enhanced-image-with-text__text-bg"
          width="800"
          height="600"
        />
      {%- endif -%}
      
      <div
        id="ImageWithText--{{ section.id }}"
        class="a11y_links image-with-text__content enhanced-image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }} content-container"
      >
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
              <{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}div{% endif %}
                class="image-with-text__heading inline-richtext {{ block.settings.heading_size }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.heading }}
              </{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}div{% endif %}>
            
            {%- when 'caption' -%}
              <p
                class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}"
                {{ block.shopify_attributes }}
              >
                {{ block.settings.caption | escape }}
              </p>
            
            {%- when 'text' -%}
              <div class="image-with-text__text rte {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                {{ block.settings.text }}
              </div>
            
            {%- when 'icon_text' -%}
              <div class="icon-text-item icons-with-text icon-text-block-{{ block.id }}" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <img src="{{ block.settings.icon | image_url: width: 48 }}" alt="{{ block.settings.icon_alt | escape }}" class="icon-text-item__icon">
                {%- endif -%}
                <div class="icon-text-item__content">
                  {%- if block.settings.heading != blank -%}
                    <{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}h3{% endif %}
                      class="icon-text-item__heading"
                    >
                      {{ block.settings.heading }}
                    </{% if block.settings.heading_tag != 'default' %}{{ block.settings.heading_tag }}{% else %}h3{% endif %}>
                  {%- endif -%}
                  <div class="icon-text-item__text rte {{ block.settings.text_style }}">
                    {{ block.settings.text }}
                  </div>
                </div>
              </div>
            
            {%- when 'button' -%}
              <div class="button-container">
                {%- if block.settings.button_label != blank -%}
                  <a
                    {% if block.settings.button_link == blank %}
                      role="link" aria-disabled="true"
                    {% else %}
                      href="{{ block.settings.button_link }}"
                    {% endif %}
                    class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                    {{ block.shopify_attributes }}
                  >
                    {{ block.settings.button_label | escape }}
                  </a>
                {%- endif -%}

                {% if block.settings.second_button_label != blank %}
                  <a {% if block.settings.second_button_link == blank %}role="link" aria-disabled="true"{% else %}href="{{ block.settings.second_button_link }}"{% endif %}
                      class="button{% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}"
                      {{ block.shopify_attributes }}>
                      {{ block.settings.second_button_label }}
                  </a>
                {% endif %} 
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

