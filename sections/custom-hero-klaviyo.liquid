<!-- sections/custom-hero-klaviyo.liquid -->
<div class="custom-hero-section">
  <style>
    .custom-hero-section {
      position: relative;
      width: 100%;
    }
    
    .custom-hero-container {
      position: relative;
      width: 100%;
      overflow: hidden;
    }
    
    .custom-hero-image {
      width: 100%;
      height: auto;
      display: block;
    }
    
    .custom-hero-image.mobile-only {
      display: none;
    }
    
    .custom-hero-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      background: rgba(255, 255, 255, 0.95);
      padding: 2rem;
      border-radius: 8px;
      max-width: 500px;
      width: 90%;
      text-align: center;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }
    
    .custom-hero-content h2 {
      margin: 0 0 1rem 0;
      font-size: 2rem;
      font-weight: bold;
      color: #333;
    }
    
    .custom-hero-content p {
      margin: 0 0 1.5rem 0;
      color: #666;
      line-height: 1.5;
    }
    
    .klaviyo-embed-wrapper {
      margin-top: 1rem;
    }
    
    /* Mobile styles */
    @media (max-width: 749px) {
      .custom-hero-image.desktop-only {
        display: none;
      }
      
      .custom-hero-image.mobile-only {
        display: block;
      }
      
      .custom-hero-content {
        position: static;
        transform: none;
        margin: -50px 1rem 2rem 1rem;
        background: rgba(255, 255, 255, 0.98);
        z-index: 2;
      }
      
      .custom-hero-content h2 {
        font-size: 1.5rem;
      }
    }
    
    /* Desktop positioning options */
    .desktop-above-image .custom-hero-content {
      position: static;
      transform: none;
      margin: 0 auto 2rem auto;
      background: rgba(255, 255, 255, 0.98);
    }
    
    @media (max-width: 749px) {
      .desktop-above-image .custom-hero-content {
        position: static;
        transform: none;
        margin: 1rem;
        background: rgba(255, 255, 255, 0.98);
      }
    }
  </style>

  <div class="custom-hero-container {% if section.settings.desktop_content_position == 'above' %}desktop-above-image{% endif %}">
    
    {% comment %} Desktop content above image {% endcomment %}
    {% if section.settings.desktop_content_position == 'above' %}
      <div class="custom-hero-content desktop-only" style="position: static; transform: none; margin: 0 auto 2rem auto;">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
        {% if section.settings.klaviyo_embed_code != blank %}
          <div class="klaviyo-embed-wrapper">
            {{ section.settings.klaviyo_embed_code }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% comment %} Images {% endcomment %}
    <div class="image-container">
      {% if section.settings.desktop_image != blank %}
        <img 
          src="{{ section.settings.desktop_image | image_url: width: 1920 }}"
          alt="{{ section.settings.desktop_image.alt | escape }}"
          class="custom-hero-image desktop-only"
          loading="lazy"
          width="{{ section.settings.desktop_image.width }}"
          height="{{ section.settings.desktop_image.height }}"
        >
      {% endif %}
      
      {% if section.settings.mobile_image != blank %}
        <img 
          src="{{ section.settings.mobile_image | image_url: width: 750 }}"
          alt="{{ section.settings.mobile_image.alt | escape }}"
          class="custom-hero-image mobile-only"
          loading="lazy"
          width="{{ section.settings.mobile_image.width }}"
          height="{{ section.settings.mobile_image.height }}"
        >
      {% elsif section.settings.desktop_image != blank %}
        <img 
          src="{{ section.settings.desktop_image | image_url: width: 750 }}"
          alt="{{ section.settings.desktop_image.alt | escape }}"
          class="custom-hero-image mobile-only"
          loading="lazy"
          width="{{ section.settings.desktop_image.width }}"
          height="{{ section.settings.desktop_image.height }}"
        >
      {% endif %}
    </div>

    {% comment %} Content overlay for desktop or below image for mobile {% endcomment %}
    {% if section.settings.desktop_content_position == 'overlay' or section.settings.desktop_content_position == blank %}
      <div class="custom-hero-content">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
        {% if section.settings.klaviyo_embed_code != blank %}
          <div class="klaviyo-embed-wrapper">
            {{ section.settings.klaviyo_embed_code }}
          </div>
        {% endif %}
      </div>
    {% endif %}

    {% comment %} Mobile content below image {% endcomment %}
    {% if section.settings.desktop_content_position == 'above' %}
      <div class="custom-hero-content mobile-only" style="position: static; transform: none; margin: 1rem; background: rgba(255, 255, 255, 0.98); display: none;">
        {% if section.settings.heading != blank %}
          <h2>{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.description != blank %}
          <p>{{ section.settings.description }}</p>
        {% endif %}
        {% if section.settings.klaviyo_embed_code != blank %}
          <div class="klaviyo-embed-wrapper">
            {{ section.settings.klaviyo_embed_code }}
          </div>
        {% endif %}
      </div>
      
      <style>
        @media (max-width: 749px) {
          .custom-hero-content.mobile-only {
            display: block !important;
          }
        }
      </style>
    {% endif %}

  </div>
</div>

{% schema %}
{
  "name": "Custom Hero with Klaviyo",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image",
      "info": "Recommended size: 1920x800px"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image (Optional)",
      "info": "If not set, desktop image will be used. Recommended size: 750x1000px"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Something's Blooming"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "A revolutionary oral care upgrade is coming on Sept 9. Get ready for the big reveal! Sign up to stay in the loop."
    },
    {
      "type": "select",
      "id": "desktop_content_position",
      "label": "Desktop Content Position",
      "options": [
        {
          "value": "overlay",
          "label": "Over Image (Overlay)"
        },
        {
          "value": "above",
          "label": "Above Image"
        }
      ],
      "default": "overlay",
      "info": "On mobile, content will always appear below the image"
    },
    {
      "type": "header",
      "content": "Klaviyo Integration"
    },
    {
      "type": "html",
      "id": "klaviyo_embed_code",
      "label": "Klaviyo Embed Code",
      "info": "Paste your Klaviyo form embed code here"
    },
    {
      "type": "header",
      "content": "Section Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top Padding",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom Padding",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Custom Hero with Klaviyo"
    }
  ]
}
{% endschema %}